{
  "files": {
    "include": "src/styles/**/*.s+(a|c)ss",
    "ignore": [
      "node_modules/**/*.s+(a|c)ss",
      "src/styles/vendor/**/*"
    ]
  },
  "rules": {
    "class-name-format": 2,
    "force-element-nesting": 2,
    "indentation": 2,
    "leading-zero": 2,
    "no-color-literals": 2,
    "no-color-keywords": 2,
    "no-important": 0,
    "no-vendor-prefixes": 0,
    "property-sort-order": 2,
    "pseudo-element": 2,
    "trailing-semicolon": 2
  }
}
